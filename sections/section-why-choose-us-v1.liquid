
<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="banner-v1">
    
    <div class="why-choise box-parallax" style="background-image: url({%if section.settings.choose_us_bg == blank %}{{"prl1.jpg"|asset_url}}{%else%}{{section.settings.choose_us_bg|img_url:"master"}}{%endif%});">
			<div class="container">
				<div class="choise-title text-center wow zoomIn">
					<h2 class="title30 paci-font color">{{section.settings.choose_us_title}}</h2>
					<h2 class="title30 font-bold text-uppercase white">{{section.settings.choose_us_text}}</h2>
				</div>
				<div class="list-service2">
					<div class="row">
						<div class="col-md-6 col-sm-6 col-xs-6">
                          {%for block in section.blocks%}
                          {%if block.type == 'block_left' %}

                          <div class="item-service1 table wow fadeInRight">
                            <div class="service-icon">
                              <a href="{{block.settings.block_url}}"><i class="{{block.settings.block_image}}"></i></a>
                            </div>
                            <div class="service-info">
                              <h3 class="title18"><a href="{{block.settings.block_url}}" class="white">{{block.settings.block_title}}</a></h3>
                              <p class="desc white">{{block.settings.block_text}}</p>
                            </div>
                          </div>
                          {%endif%}
                          {%endfor%}
							
						</div>
						<div class="col-md-6 col-sm-6 col-xs-6">
							{%for block in section.blocks%}
                          {%if block.type == 'block_right' %}

                          <div class="item-service1 table wow fadeInRight">
                            <div class="service-icon">
                              <a href="{{block.settings.block_url}}"><i class="{{block.settings.block_image}}"></i></a>
                            </div>
                            <div class="service-info">
                              <h3 class="title18"><a href="{{block.settings.block_url}}" class="white">{{block.settings.block_title}}</a></h3>
                              <p class="desc white">{{block.settings.block_text}}</p>
                            </div>
                          </div>
                          {%endif%}
                          {%endfor%}
						</div>
					</div>
				</div>
				
			</div>
		</div>

  </section>
</div>

