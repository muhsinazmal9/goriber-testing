
<div data-section-id="{{ section.id }}" data-section-type="section-brand-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="brand-v3">
    <div class="container">
 <div class="brand-slider8">
				<div class="wrap-item" data-pagination="false" data-autoplay="true" data-itemscustom="[[0,2],[480,3],[768,4],[990,5]]">
						{%for block in section.blocks %}
                      {%if block.type == 'brand' %}
                      <div class="item-brand2">
                        <a href="{{block.settings.brand_url}}" class="border bg-white" title="brand"><img class=" wobble-horizontal" {%if block.settings.brand_image == blank%} src="{{'br1.jpg'| asset_url }}"  {%else%} src="{{block.settings.brand_image|img_url:'medium'}}"  {%endif%} alt="Brand"></a>
                      </div>
                      {%endif%}
                      {%endfor%}
                  
                 </div>
			</div>
    </div>
  </section>
</div>

