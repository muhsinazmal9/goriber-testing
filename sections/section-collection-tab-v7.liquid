      },
      
      {
        "type": "image_picker",
        "id": "banner_bg",
        "label": "background"
      },
      {
        "type": "text",
        "id": "banner_title",
        "label": "Title",
        "default": "Mega Sale"
      },
       {
        "type": "text",
        "id": "banner_subtitle",
