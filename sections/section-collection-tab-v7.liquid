
<div data-section-id="{{ section.id }}" data-section-type="section-collection-tab-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="collection-tab-v7">
<div class="product-block7">
			<div class="container">
				<h2 class="title30 font-bold title-box1 text-center">{{section.settings.collection_title}}</h2>
				<ul class="text-center title-tab1 list-inline-block">
				
                  {%for block in section.blocks %}
                  <li {%if forloop.index == 1%}class="active"{%else%}{%endif%}><a href="#{{collections[block.settings.product_collection].handle}}{{ section.id }}" data-toggle="tab">{{block.settings.product_collection_title}}</a></li>
                  {%endfor%}
				</ul>
				<div class="row">
					<div class="col-md-3 col-sm-4 col-xs-6">
						<div class="block-adv7 banner-adv zoom-image line-scale">
							<a href="#" class="adv-thumb-link">
                              {%if section.settings.banner_bg == blank%}
                              <img  src="{{"ad1.jpg"|asset_url}}" alt="" />
                              {%else%}
                              <img src="{{section.settings.banner_bg|img_url:"grande"}}" alt="" />
                              {%endif%}
                              </a>
							<div class="banner-info white text-center">
								<h2 class="title30 title-underline">{{section.settings.banner_title}} </h2>
								<h3 class="title30 font-bold">{{section.settings.banner_subtitle}}</h3>
								<a href="{{section.settings.banner_button_url}}" class="btn-arrow white text-uppercase">{{section.settings.banner_button}}</a>
                              
							</div>
						</div>
					</div>
					<div class="col-md-9 col-sm-8 col-xs-6">
						<div class="tab-content">
							   {%for block in section.blocks %}
                          <div id="{{collections[block.settings.product_collection].handle}}{{ section.id }}" class="tab-pane {%if forloop.index == 1%}active{%else%}{%endif%}">

                            <div class="product-slider  product-slider1">
                              <div class="wrap-item" data-pagination="false" data-navigation="true" data-itemscustom="[[0,1],[768,2],[1024,3],[1200,4]]">
                                {%for product in collections[block.settings.product_collection].products limit:block.settings.product_limit%}
                                {%include 'product-item-v12'%}
                                {%else%}
                                {%include 'product-item-v12-empty'%}
                                {%endfor%}


                              <!-- End Item -->
                            </div>
                          </div>
                            </div>
                           {%endfor%}
							
							<!-- End Tab -->
							
						</div>
					</div>
				</div>
			</div>
		</div>
    
  </section>
</div>

