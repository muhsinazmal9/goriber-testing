
<div data-section-id="{{ section.id }}" data-section-type="section-why-choose-us-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section >
    <div class="container">
    <div class="wht-choise3">
				<div class="choise-intro3 text-center wow zoomIn">
					<h2 class="title30 font-bold">{{section.settings.choose_us_title}}</h2>
					<p class="color2">{{section.settings.choose_us_text}}</p>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="banner-choise3 wow fadeInLeft">
                          
                          <a href="#">
                            {%if section.settings.choose_us_bg == blank %}
                            <img src="{{"choise.jpg"|asset_url}}" alt="" />
                          {%else%}
                             <img src="{{section.settings.choose_us_bg|img_url:"master"}}" alt="" />
                            {%endif%}
                          </a>
                      
                      </div>
					</div>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<div class="choise-policy3">
                          {%for block in section.blocks%}
                          {%if block.type == 'block_right' %}
							<div class="item-choise3 table wow fadeInRight" data-wow-delay="0.3s">
								<div class="choise-icon3">
									<a href="{{block.settings.block_url}}" class="color"><i class="{{block.settings.block_image}}"></i></a>
								</div>
								<div class="choise-info3">
									<h3 class="title18"><a href="{{block.settings.block_url}}" class="color">{{block.settings.block_title}}</a></h3>
									<p class="desc">{{block.settings.block_text}}</p>
								</div>
							</div>
                           {%endif%}
                          {%endfor%}
							
						</div>
					</div>
				</div>
			</div>
    </div>
  
  </section>
</div>

{% schema %}
{
  "name": "why choose us v2",
  "class": "index-section",
  "settings": [
	 
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
	  
      {
        "type": "header",
        "content": "settings"
      },
      {
        "type": "image_picker",
        "id": "choose_us_bg",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "choose_us_title",
        "label": "Title section",
		"default":"Why Choose Us"
      },
	  {
        "type": "textarea",
        "id": "choose_us_text",
        "label": "text section",
		"default":"The Reasons That You Should Contact Us"
      }
	  
  	  
  ],
    "blocks": [
      {
      "type": "block_right",
      "name": "block right",
      "settings": [
    	{
          "type": "text",
          "id": "block_image",
          "label": "Icon",
		  "default":"fa fa-bus",
          "info":"Get icon fontawesome.io/icons/"
        },
		{
          "type": "text",
          "id": "block_title",
          "label": "Title",
		  "default":"Free Shipping"
        },
        {
          "type": "url",
          "id": "block_url",
          "label": "Url"
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Description",
		  "default":"With â‚¬50 or more orders"
        }
      ]
      }

    ],

 
  "presets": [{
    "name": "Why choose us v2",
    "category": " why choose us",
        "blocks": [
                {
                "type": "block_right"
                },
                {
                "type": "block_right"
                },
                {
                "type": "block_right"
                }
				
            ]
   
  }]
}
{% endschema %}