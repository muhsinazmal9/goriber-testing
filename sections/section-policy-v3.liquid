
<!-- section-slider-v1.liquid -->

<div data-section-id="{{ section.id }}" data-section-type="section-policy-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
<section >
  
  
  <div class="container">
    <div class="list-service4">
				<div class="row">
                  {%for block in section.blocks %}
					<div class="col-md-3 col-sm-6 col-xs-6">
						<div class="item-service4 text-center">
							<div class="service-icon">
								<a href="{{block.settings.icon_policy_url}}" class="white" style="background:{{block.settings.icon_policy_bg}};"><i class="{{block.settings.icon_policy}}"></i></a>
							</div>
							<div class="service-info">
								<h3 class="title18"><a href="{{block.settings.icon_policy_url}}" class="black">{{block.settings.policy_text_1}}</a></h3>
								<p class="desc silver">{{block.settings.policy_text_2}}</p>
							</div>
						</div>
					</div>
                  {%endfor%}
				
				</div>
			</div>
    
  </div>
  
</section>
</div>


{% schema %}
{
  "name": "Section policy v3",
  "class": "index-section",
  "settings": [
	 
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
  ],
  "blocks": [
    {
      "type": "policy",
      "name": "Policy",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "icon_policy",
          "label": "Icon",
		  "default":"fa fa-bus"
        },
        {
          "type": "color",
          "id": "icon_policy_bg",
          "label": "Background icon",
          "default":"#66cc33"
        },
        {
          "type": "url",
          "id": "icon_policy_url",
          "label": "Url"
        },
		
		{
          "type": "text",
          "id": "policy_text_1",
          "label": "Text 1",
		  "default":"FREE SHIPPING"
        },
		{
          "type": "text",
          "id": "policy_text_2",
          "label": "Text 2",
		  "default":"With â‚¬50 or more orders"
        }
		
      ]
    }
	
  ],
  "presets": [{
    "name": "policy v3",
    "category": "Policy",
    "blocks": [
      {
        "type": "policy"
      },
	  {
        "type": "policy"
      },
	  {
        "type": "policy"
      },
	  {
        "type": "policy"
      }
    ]
  }]
}
{% endschema %}

