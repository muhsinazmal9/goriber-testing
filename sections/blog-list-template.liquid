{% paginate blog.articles by {{section.settings.article_per_page}} %}

<section id="content">
  <div class="container">
    {%include 'breadcrumb' %}
    <!-- ENd Banner -->
    <div class="content-shop">
      <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">

          {%include 'blog-sidebar' %}
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
          <div class="main-content-blog">
            <div class="content-blog-list">
              {% for article in blog.articles %}
              <article class="item-blog-list">
                <div class="banner-adv fade-out-in zoom-image">
                  <a href="{{ article.url}}" class="adv-thumb-link" ><img src="{{ article.image.src | img_url: 'grande' }}" alt=""></a>
                </div>
                <div class="blog-info border bg-white">
                  <h2 class="title30 font-bold"><a href="{{article.url}}" class="black">{{article.title}}</a></h2>
                  <ul class="list-inline-block blog-comment-date">

                    <li><label>{{'blogs.article.date_post'|t}} </label><span class="color">{{article.published_at | date: " %d %B , %Y " }}</span></li>
                    <li><label>{{'blogs.comments.comments_with_count.other'|t}} </label><a href="#" class="color">{{article.comments_count}} </a></li>
                  </ul>
                  <p class="desc">
                    {% if article.excerpt == blank %}

                    {{ article.content | strip_html | truncate: 150 }}
                    {% else %}

                    {{ article.excerpt }}
                    {% endif %}

                  </p>
                  <div class="table social-readmore">
                    <div class="text-left">
                      <a href="{{ article.url}}" class="shop-button">{{'blogs.article.read_more'|t}}</a>
                    </div>
                    <div class="text-right blog-social">
                      <span>{{'blogs.article.share'|t}} </span>
                      {%include 'social-share'%}

                    </div>
                  </div>
                </div>
              </article>
              {% endfor %}
            </div>
            {% if paginate.pages > 1 %}
            {% include 'pagination' %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    <!-- End Content Shop -->
  </div>
</section>

{% endpaginate %}
{% schema %}
{
  "name": "Blog list pages",
  "settings": [
    
    {
      "type": "text",
      "id": "article_per_page",
      "label": "article per page",
		"default":"6"
    }
  ]
}
{% endschema %}