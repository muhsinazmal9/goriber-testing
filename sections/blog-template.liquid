{% paginate blog.articles by {{section.settings.article_per_page}} %}


<section id="content">
		<div class="container">
			{%include 'breadcrumb' %}
			<!-- ENd Banner -->
			<div class="content-shop">
				<div class="masonry-list-post">
                   {% for article in blog.articles %}
					<article class="item-post-masonry">
						<div class="banner-adv overlay-image zoom-image">
						
                          <a href="{{ article.url}}" class="adv-thumb-link" ><img src="{{ article.image.src | img_url: '800x' }}" alt=""></a>
						</div>
						<div class="blog-info">
                          <h2 class="title30">
                            <a href="{{article.url}}" class="black">{{article.title}}</a>
                          </h2>
							<ul class="list-inline-block blog-comment-date">
								<li><label>{{'blogs.article.date_post'|t}} </label><span class="color">{{article.published_at | date: " %d %B , %Y " }}</span></li>
								<li><label>{{'blogs.comments.comments_with_count.other'|t}} </label><a href="#" class="color">{{article.comments_count}} </a></li>
							</ul>
							<p class="desc">
                              {% if article.excerpt == blank %}

                              {{ article.content | strip_html | truncate: 150 }}
                              {% else %}

                              {{ article.excerpt }}
                              {% endif %}
                          </p>
							<div class="table social-readmore">
								<div class="text-left">
									<a href="{{ article.url}}" class="shop-button">{{'blogs.article.read_more'|t}}</a>
								</div>
								<div class="text-right blog-social">
									<span>{{'blogs.article.share'|t}} </span>
                                  {%include 'social-share'%}
									
								</div>
							</div>
						</div>
					</article>
                    {% endfor %}
					<!-- End Item -->
				
				</div>
              {% if paginate.pages > 1 %}
              {% include 'pagination' %}
              {% endif %}
<!-- 				<div class="text-center">
					<a href="#" class="btn-arrow color">Load more</a>
				</div> -->
			</div>
			<!-- End Content Shop -->
		</div>
	</section>

{% endpaginate %}

{% schema %}
{
  "name": "Blog pages",
  "settings": [
    
    {
      "type": "text",
      "id": "article_per_page",
      "label": "article per page",
		"default":"4"
    }
  ]
}
{% endschema %}
