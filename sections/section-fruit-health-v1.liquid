

<div data-section-id="{{ section.id }}" data-section-type="section-fruit-health" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section>
<div class="fruit-health">
			<div class="container">
				<h2 class="title30 font-bold title-box1 text-center">{{section.settings.section_title}}</h2>
				<div class="row">
					<div class="col-md-4 col-sm-12 col-xs-12">
						<div class="list-diet custom-scroll">
                          {%for block in section.blocks%}
							<div class="item-diet table">
								<div class="diet-thumb"><a href="{{block.settings.fruit_image_url}}"><img {%if block.settings.fruit_image == blank %}src="{{'diet1.png'|asset_url}}"{%else%}src="{{block.settings.fruit_image|img_url:'small'}}"{%endif%} alt="" /></a></div>
								<div class="diet-info">
									<h3 class="title18"><a href="{{block.settings.fruit_image_url}}" class="black">{{block.settings.fruit_title}}</a></h3>
									<p class="desc">{{block.settings.fruit_text}}</p>
								</div>
							</div>
                          {%endfor%}
							
							
						</div>
					</div>
					<div class="col-md-4 col-sm-6 col-xs-12">
						<div class="diet-image"><img {%if section.settings.health_image == blank %}src="{{'ruler.jpg'|asset_url}}"{%else%}src="{{section.settings.health_image|img_url:'large'}}"{%endif%} alt="" /></div>
					</div>
					<div class="col-md-4 col-sm-6 col-xs-12">
						<div class="diet-intro">
							<p class="desc">{{section.settings.health_text}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
    
   
			
	
  </section>
</div>

{% schema %}

  {
    "name": "Fruit health v1",
    "class" : "index-section",
    "settings": [
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Title",
        "default": "Fruit And Health"
      },
      {
        "type": "image_picker",
        "id": "health_image",
        "label": "Image"
      },
      
	  {
        "type": "textarea",
        "id": "health_text",
        "label": "Content",
        "default": "We applaud their efforts, but you donâ€™t have to commit to dumpster-diving to live a foraging-friendly lifestyle. One of the best ways to incorporate some freeganism into your life is to take advantage of the wild fruits in your area. Odds are much of it is going to waste anyways."
      }
	  
	  
      
    ],
"blocks": [
      {
      "type": "fruit",
      "name": "fruit",
      "settings": [
    	{
          "type": "image_picker",
          "id": "fruit_image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "fruit_image_url",
          "label": "Url"
        },
        {
          "type": "text",
          "id": "fruit_title",
          "label": "Title",
          "default":"Purple Grapes"
        },
        {
          "type": "text",
          "id": "fruit_text",
          "label": "Content",
          "default":"Best Superfoods for Weight Loss"
        }
      ]
      }

    ],
   
    "presets": [
      {
        "name": "Fruit health v1",
        "category": "Fruit health",
        "blocks": [
                {
                "type": "fruit"
                },
                {
                "type": "fruit"
                },
                {
                "type": "fruit"
                },
                {
                "type": "fruit"
                },
                {
                "type": "fruit"
                }
            ]
      }
    ]
  }
{% endschema %}
