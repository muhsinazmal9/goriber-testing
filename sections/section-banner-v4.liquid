
<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section >
    <div class="container">
    <div class="list-adv7">
				<div class="row">
                  {%for block in section.blocks %}
					<div class="col-md-4 col-sm-4 col-xs-12">
						<div class="item-adv7 banner-adv zoom-image overlay-image">
							<a href="{{block.settings.banner1_url}}" class="adv-thumb-link">
                              
                           <img  {%if block.settings.banner1_image == blank%} src="{{'ad2.jpg'| asset_url }}"{%else%} src="{{block.settings.banner1_image|img_url:'grande'}}"  {%endif%} alt="">
						        
                          </a>
							<div class="banner-info text-center white">
								<h3 class="title24">{{block.settings.banner1_title}}</h3>
								<h2 class="title30">{{block.settings.banner1_text}}</h2>
								<a href="{{block.settings.banner1_url}}" class="btn-arrow white text-uppercase">{{block.settings.banner1_shopnow}}</a>
							</div>
						</div>
					</div>
                  {%endfor%}
					
				</div>
			</div>

    </div>
  </section>
</div>

{% schema %}
{
  "name": "Section banner v4",
  "class": "index-section",
  "settings": [
	 
      {
        "type": "header",
        "content": "Section Space"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin Top",
        "info": "Defined in pixels. Do not add the 'px' unit."
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "info": "Defined in pixels. Do not add the 'px' unit."
      }
      
  ],
"blocks": [
      {
      "type": "banner",
      "name": "banner",
      "settings": [
    	
	  {
        "type": "image_picker",
        "id": "banner1_image",
        "label": "Image"
      },
	  
  	  {
        "type": "text",
        "id": "banner1_title",
        "label": "title",
        "default": "Orange Fruit"
      },
      {
        "type": "text",
        "id": "banner1_text",
        "label": "text",
        "default": "â‚¬ 180.00"
      },
	  {
        "type": "text",
        "id": "banner1_shopnow",
        "label": "Button",
        "default": "shop now"
      },
	  {
        "type": "url",
        "id": "banner1_url",
        "label": "Url"
      }
      ]
      }
      

    ],

  "presets": [{
    "name": "Banner v4",
    "category": "Banner",
    "blocks": [
                {
                "type": "banner"
                },
                {
                "type": "banner"
                },
                {
                "type": "banner"
                }
            ]
   
  }]
}
{% endschema %}