

{% if customer %}
{% assign value = product.id %}
{% capture productID %}{{ product.id }}{% endcapture %}

{% for tag in customer.tags %}
{% capture tagID %}{{ tag }}{% endcapture %}
{% if tagID contains productID %}
{% capture value %}x{{ tagID }}{% endcapture %}
{% endif %}
{% if value.size == 0 %}{% assign value = productID %}{% endif %}
{% endfor %}

{%assign t = 0 %}
{% for tag in customer.tags %}{% if tag contains productID %}{% assign t = t |plus:1 %}{% endif %}{% endfor %}
{% assign check = t | modulo:2 %}

{% if check == 0 %}{% assign display = 'true' %}{%else%}{% assign display = 'false' %}{% endif %}

{% if display == 'true'%}
 {% form 'customer' %}
    <input type="hidden" name="contact[email]" value="{{ customer.email }}"/>
    <input type="hidden" name="contact[tags]" value="{{ value }}" />
    <button class="wishlist-link wishlist awe-button product-quick-whistlist" type="submit">
     <i class="fa fa-heart-o" aria-hidden="true"></i><span>Add Wishlist</span>
    </button>
{% endform %} 

{% else %}
{% form 'customer' %}
      <input type="hidden" name="contact[email]" value="{{ customer.email }}"/>
      <input type="hidden" name="contact[tags]" value="{{ value }}" />
      <button class="wishlist-link wishlist awe-button product-quick-whistlist" type="submit"  style="color:{{settings.main_color}};">
       <i class="fa fa-heart" aria-hidden="true"></i><span>Remove</span>
      </button>
  {% endform %}
{% endif %}

{% else %}

<a href="/account/login" class="wishlist-link"><i class="fa fa-heart-o" aria-hidden="true"></i><span>wishlist</span></a>
{% endif %}




