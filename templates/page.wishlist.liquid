
<section id="content">
		<div class="container">
			<div class="content-page">
				{%include 'breadcrumb' %}
				<!-- ENd Banner -->
				<div class="content-cart-checkout woocommerce">
                  
                 
                  
                  <h2 class="title30 font-bold text-uppercase">{{ 'wishlist.general.title' | t }}</h2>
				 {% if customer %}
                  {% assign wish_list_active = false %}
                  <div class="table-responsive">
                    <table class="shop_table cart table">
                      <thead>
                        <tr>
                          <th class="product-remove">&nbsp;</th>
                          <th class="product-thumbnail">&nbsp;</th>
                          <th class="product-name">{{ 'wishlist.labels.produc_name' | t }}</th>
                          <th class="product-price">{{ 'wishlist.labels.product_price' | t }}</th>
                          
                          <th class="product-subtotal">{{ 'wishlist.labels.product_avai' | t }}</th>
                          <th class="add-cart">{{ 'wishlist.labels.add_cart' | t }}</th>

                        </tr>
                      </thead>
                      <tbody>
                        {% assign aray = '' %}
                        {% for collection in collections %}
                        {% paginate collection.products by collection.all_products_count %}



                        {% for product in collection.products %}

                        {% assign value = product.id %}
                        {% capture productID %}{{ product.id }}{% endcapture %}
                        {% for tag in customer.tags %}
                        {% capture tagID %}{{ tag }}{% endcapture %}
                        {% if tagID contains productID %}
                        {% capture value %}x{{ tagID }}{% endcapture %}
                        {% endif %}
                        {% if value.size == 0 %}{% assign value = productID %}{% endif %}
                        {% endfor %}

                        {%assign t = 0 %}
                        {% for tag in customer.tags %}{% if tag contains productID %}{% assign t = t |plus:1 %}{% endif %}{% endfor %}
                        {% assign check = t | modulo:2 %}
                        {% if check == 0 %}{% assign display = 'true' %}
                        {%else%}
                        {% assign display = 'false' %}



                        {% endif %}

                        {% if display == 'false'%}
                        {% assign wish_list_active = true %}

                        {% assign sold_out = true %}
                        {% if product.available  %}
                        {% assign sold_out = false %}
                        {% endif %}

                        {% assign somearray = array | split: ',' %}

                        {%unless aray contains product.id  %}

                        <tr class="cart_item">
                          <td class="product-remove">
                            {% form 'customer' %}
                            <input type="hidden" name="contact[email]" value="{{ customer.email }}"/>
                            <input type="hidden" name="contact[tags]" value="{{ value }}" />
                            <button  type="submit">
                              <i class="fa fa-times"></i>
                            </button>

                            {% endform %} 

                          </td>
                          <td class="product-thumbnail">
                            <a href='{{ product.url }}'><img src="{{ product.featured_image.src | product_img_url: 'compact' }}" alt="{{ product.featured_image.alt | escape }}"></a>					
                          </td>
                          <td class="product-name" data-title="Product">
                            <a href='{{ product.url }}' >              
                              {{ product.title | split: '|' | first }}             
                            </a>
                          </td>
                          <td class="product-price" data-title="Price">
                            {% if on_sale %}
                            <p class="sale">
                              <del class="old-price"> {{ product.compare_at_price_min | money }}</del>
                              <ins class="amount">{% if product.price_varies %}{% endif %}{{ product.price_min | money }}</ins>
                            </p>
                            {% else %}
                            <p class="regular-product price">
                              <span class="amount">{% if product.price_varies %}{% endif %}{{ product.price_min | money }}</span>
                            </p>
                            {% endif %}


                          </td>
                          
                          <td class="product-quantity">
                            <span class="wishlist-{% if product.available %}InStock{% else %}OutOfStock{% endif %}">{% if product.available %}InStock{% else %}OutOfStock{% endif %}</span>                 

                          </td>
                          <td class="product-subtotal" data-title="Total">
                            <div class="action text-center product-extra-link">
                              {% assign variantCount = product.variants | size %}
                              <form action="/cart/add" method="post" class="variants" id="product-actions-{{ product.id }}" enctype="multipart/form-data" style="padding:0px;">    
                                {% if sold_out %}
                                <button class="addcart-link add-to-cart-button" type="submit" value="{{ 'products.product.unavailable' | t }}" disabled="disabled">
                                Sold out
                                </button>
                                {% else %}
                                {% if variantCount > 1 %}
                                <button class="addcart-link add-to-cart-button" type="button" onclick="window.location.href='{{product.url}}'" value="{{ 'products.product.add_to_cart' | t }}">
                                {{ 'products.product.add_to_cart' | t }}
                                </button>
                                {% else %}
                                <input type="hidden" name="id" value="{{ product.variants[0].id }}" />      
                                <button class="addcart-link add-to-cart-button" type="submit" value="{{ 'products.product.add_to_cart' | t }}">
                                {{ 'products.product.add_to_cart' | t }}
                                </button>
                                {% endif %}
                                {% endif %}
                              </form>
                            </div>
                          </td>
                        </tr>

                        {% endunless %} 

                        {% assign aray = aray| append: product.id | append:',' %}
                        {% capture used %}{{ product_id }} {{ used }}{% endcapture %}
                        {% endif %}

                        {% endfor %}
                        {% endpaginate %}
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>

                  <form method='post' action='/contact' id='remove-wishlist-form' accept-charset='UTF-8'>
                    <input name='form_type' type='hidden' value='customer'/>
                    <input name='utf8' type='hidden' value='âœ“'>
                    <input type='hidden' name='contact[email]' value='{{ customer.email }}'/>
                    <input type='hidden' name='contact[tags]'  value='' />
                  </form>
                  {% else %}
                  <p>
                    <span>{{ 'wishlist.general.subtext' | t }}</span>
                    <a href="/account/login">{{ 'wishlist.general.sign_in' | t }}</a>
                    <span> - </span>
                    <a href="/account/register">{{ 'wishlist.general.or' | t }}</a>
                  </p>
                  {% endif %}
             
					
				</div>	
			</div>
		</div>
		<!-- End Content Pages -->
	</section>


